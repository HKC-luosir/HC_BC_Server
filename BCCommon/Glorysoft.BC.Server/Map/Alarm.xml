  <alias>
    <typeAlias alias="AlarmInfo"  type="Glorysoft.BC.Entity.AlarmInfo"/>
  </alias>

  <resultMaps>
    <resultMap id="AlarmInfoResult" class="AlarmInfo">
      <result property="AlarmID" column="alarmid"/>
