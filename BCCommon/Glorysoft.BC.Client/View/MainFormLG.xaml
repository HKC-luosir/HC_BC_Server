                    </i:Interaction.Triggers>
                    <Label Content="STK" FontSize="10"  Width="50" Height="30"/>
                </Label>
                <Label  BorderBrush="#5b5b5b" BorderThickness="2" Width="45" Height="20" Margin="151,133,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" >
